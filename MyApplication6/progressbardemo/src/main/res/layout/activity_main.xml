<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnStart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Start!"
        android:background="@drawable/btnshade"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnReset"
        android:layout_toRightOf="@id/btnStart"
        android:layout_marginLeft="40dp"
        android:layout_alignParentTop="true"
        android:text="Reset!"
        android:background="@drawable/btnshade"
        />


    <ProgressBar
        android:id="@+id/progressBarH"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/progress_hor_bg"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnStart"
        android:layout_marginTop="44dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/progress_rotate_bg"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/progressBarH"
        android:layout_toRightOf="@+id/btnStart"
        android:layout_toEndOf="@+id/btnStart"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar"
        android:layout_marginTop="70dp"
        android:thumb="@drawable/sb_thumb"
        android:progressDrawable="@drawable/sb_bg" />
    <TextView
        android:id="@+id/tvSB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/seekBar"
        android:text="0"/>
</RelativeLayout>